<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf" />
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:drawableEnd="@drawable/ic_user"
                android:paddingEnd="@dimen/_5sdp"
                android:background="@drawable/broder"
                android:id="@+id/name"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:hint="name"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                tools:ignore="HardcodedText,TextFields"
                android:importantForAutofill="no" />
            <EditText
                android:drawableEnd="@drawable/ic_key"
                android:background="@drawable/broder"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/name"
                android:id="@+id/password"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:hint="Passsword"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:importantForAutofill="no"
                tools:ignore="HardcodedText,RtlHardcoded,TextFields" />
            <EditText
                android:background="@drawable/broder"
                android:layout_below="@+id/password"
                android:id="@+id/gmail"
                android:drawableEnd="@drawable/ic_gmail"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:hint="gmail"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                tools:ignore="HardcodedText,RtlHardcoded,TextFields"
                android:importantForAutofill="no" />
            <EditText
                android:drawableEnd="@drawable/ic_phonecontact"
                android:background="@drawable/broder"
                android:layout_below="@+id/gmail"
                android:id="@+id/phonen"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:hint="number"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                tools:ignore="HardcodedText,RtlSymmetry,TextFields,UnusedAttribute"
                android:autofillHints="" />
            <LinearLayout

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/phonen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button

                    android:textColor="#000"
                    android:text="Register"
                    android:background="@drawable/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />



            </LinearLayout>





        </RelativeLayout>




    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf" />

</LinearLayout>